<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order ID:"
                    android:textSize="17dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Client:"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medicine Code:"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantity:"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date Ordered:"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/transac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order ID"
                    android:textSize="17dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/transac1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Client"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/transac2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/transac3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medicine"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/transac4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/transac7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/transac5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date Ordered"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/transac6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_margin="5dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>