<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.maica.southstarapp.User_View_medicine">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/user_medicineImage"
                android:layout_width="223dp"
                android:layout_height="221dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Code:"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dosage:"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price: "
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>

                    <TextView
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantity: "
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_view_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/user_view_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Code"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/user_view_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/user_view_dosage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dosage"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/user_view_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price: "
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/user_view_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>

                    <TextView
                        android:layout_marginTop="50dp"
                        android:id="@+id/user_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>

                    <Button
                        android:layout_marginTop="-25dp"
                        android:layout_marginLeft="80dp"
                        android:id="@+id/user_add_quantity"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/add" />

                    <Button
                        android:layout_marginTop="-35dp"
                        android:layout_marginLeft="150dp"
                        android:id="@+id/user_minus_quantity"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/remove"
                        android:layout_marginBottom="15dp"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/addcart"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Add to cart"
                android:layout_gravity="center"
                android:drawableRight="@drawable/addtocart"
                android:drawablePadding="-30dp"
                android:background="@color/blacktrans"
                android:layout_margin="15dp"
                android:textColor="#fff"/>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
