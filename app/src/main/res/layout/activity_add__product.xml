<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.maica.southstarapp.Add_Product">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <ImageButton
                   android:id="@+id/AddImage"
                   android:layout_margin="10dp"
                   android:layout_width="200dp"
                   android:layout_height="200dp"
                   android:layout_gravity="center" />

               <Button
                   android:id="@+id/btnBrowseImage"
                   android:layout_width="150dp"
                   android:layout_height="40dp"
                   android:layout_gravity="center"
                   android:background="@color/blacktrans"
                   android:text="Browse Image"
                   android:textColor="#fff"  />

           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Code:"
                        android:textSize="15dp"
                        android:textColor="#ffffff"
                        android:layout_margin="10dp"/>


                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textSize="15dp"
                        android:textColor="#ffffff"
                        android:layout_margin="10dp"/>


                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dosage:"
                        android:textSize="15dp"
                        android:textColor="#ffffff"
                        android:layout_margin="10dp"/>


                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price:"
                        android:textSize="15dp"
                        android:textColor="#ffffff"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description:"
                        android:textSize="15dp"
                        android:textColor="#ffffff"
                        android:layout_margin="10dp"/>


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. of Stock:"
                        android:textSize="15dp"
                        android:textColor="#ffffff"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type:"
                        android:textSize="15dp"
                        android:textColor="#ffffff"
                        android:layout_margin="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15dp">
                    <EditText
                        android:id="@+id/medicine_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:inputType="textCapSentences"
                        android:layout_margin="-10dp"
                        android:textColor="#ffffff" />


                    <EditText
                        android:id="@+id/medicine_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:inputType="textCapSentences"
                        android:layout_margin="-10dp"/>


                    <EditText
                        android:id="@+id/dosage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:inputType="textCapSentences"
                        android:layout_margin="-10dp"/>

                    <EditText
                        android:id="@+id/medicine_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:inputType="text|number"
                        android:layout_margin="-10dp"/>


                    <EditText
                        android:id="@+id/medicine_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:inputType="textCapSentences"
                        android:layout_margin="-10dp"/>


                    <EditText
                        android:id="@+id/medicine_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:inputType="text|number"
                        android:layout_margin="-10dp"/>
                </LinearLayout>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radiogrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="-15dp">

                <RadioButton
                    android:id="@+id/prescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prescription"
                    android:textColor="#ffffff"
                    android:textSize="15dp"/>

                <RadioButton
                    android:id="@+id/nonprescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non-Prescription"
                    android:textColor="#ffffff"
                    android:textSize="15dp"/>
            </RadioGroup>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category:"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:layout_margin="25dp"/>

            <RadioGroup
                android:id="@+id/radiotype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="-15dp">

                <RadioButton
                    android:id="@+id/generic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generic"
                    android:textColor="#ffffff"
                    android:textSize="15dp"/>

                <RadioButton
                    android:id="@+id/branded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Branded"
                    android:textColor="#ffffff"
                    android:textSize="15dp"/>
            </RadioGroup>

            <Button
                android:id="@+id/btn_addmedicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Medicine"
                android:layout_margin="15dp"
                android:background="@color/blacktrans"
                android:textColor="#fff"/>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
